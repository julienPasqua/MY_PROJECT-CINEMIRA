{# templates/components/LayoutNavbar.html.twig #}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
    <div class="container-fluid">

        {# ðŸ”¹ NOM DU SITE #}
        <a class="navbar-brand fw-bold text-warning" href="{{ path('home.index') }}">
            {{ brandName }}
        </a>

        {# ðŸ”¹ Bouton mobile #}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# ðŸ”¹ Menu principal #}
        <div class="collapse navbar-collapse" id="navbarNav">

            <ul class="navbar-nav me-auto">
                {% for item in items %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.current_route == item.route %}active text-warning{% endif %}"
                           href="{{ path(item.route) }}">
                            {{ item.label }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

            {# ðŸ”¹ Barre de recherche (sauf page accueil) #}
            {% if showSearchBar is not defined or showSearchBar == true %}
                <form class="d-flex me-3" role="search" id="searchForm">
                    <input
                        class="form-control bg-secondary text-white border-warning"
                        type="search"
                        placeholder="Rechercher un film..."
                        aria-label="Search"
                        id="searchInput"
                    />
                </form>
            {% endif %}

            {# ðŸ”¹ Authentification #}
            <div class="d-flex align-items-center gap-2">

                {% if app.user %}
                    {# Utilisateur connectÃ© #}
                    <a href="{{ path('app_profile') }}" class="btn btn-outline-warning btn-sm">
                        Mon compte
                    </a>

                    <a href="{{ path('app_logout') }}" class="btn btn-warning btn-sm text-dark fw-bold">
                        DÃ©connexion
                    </a>

                {% else %}
                    {# Utilisateur non connectÃ© #}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-warning btn-sm">
                        Connexion
                    </a>

                    <a href="{{ path('app_register') }}" class="btn btn-warning btn-sm text-dark fw-bold">
                        Inscription
                    </a>
                {% endif %}

            </div>
        </div>
    </div>
</nav>


{# Zone d'affichage des rÃ©sultats de recherche #}
<div class="container mt-2">
    <div id="searchResults"></div>
</div>
