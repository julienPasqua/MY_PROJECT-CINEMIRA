{% extends 'base.html.twig' %}

{% block title %}Contact CineMira{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: linear-gradient(135deg, #1a1a2e, #16213e, #0f0f23);
        color: white;
        font-family: 'Futura', sans-serif;
    }

    .contact-card {
        background: rgba(255,255,255,0.05);
        backdrop-filter: blur(20px);
        padding: 2rem;
        border-radius: 20px;
        border: 1px solid rgba(118,75,162,0.4);
        max-width: 700px;
        margin: auto;
        margin-top: 50px;
        box-shadow: 0 0 40px rgba(118,75,162,0.3);
    }

    h1 {
        text-align: center;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-submit {
        width: 100%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        padding: 12px;
        color: white;
        border-radius: 12px;
        font-weight: bold;
        margin-top: 1rem;
        transition: 0.3s;
    }

    .btn-submit:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(102,126,234,0.5);
    }
.flash-success {
    background: linear-gradient(135deg, #5A8FF0, #72A8FF);
    color: white;
    padding: 15px 20px;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
    animation: slideFadeIn 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(-10px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}

/* IcÃ´ne âœ” */
.flash-icon {
    background: rgba(255, 255, 255, 0.25);
    width: 28px;
    height: 28px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    font-size: 1rem;
}

/* Apparition */
@keyframes slideFadeIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Disparition */
@keyframes slideFadeOut {
    to {
        opacity: 0;
        transform: translateY(-15px);
    }
}

</style>
{% endblock %}

{% block body %}
{% set show_Search_Bar = false %}

<div data-turbo="false">


<div class="contact-card">

    <h1>ðŸ“© Contactez-nous</h1>

    {% for message in app.flashes('success') %}
    <div class="flash-success" id="flashMessage">
        <span class="flash-icon">âœ”</span>
        {{ message }}
    </div>
    {% endfor %}

    {{ form_start(form, { attr: { 'data-turbo': 'false' } }) }}

    <div class="mb-3">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class':'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.message) }}
        {{ form_widget(form.message, {'attr': {'class':'form-control', 'rows': 6}}) }}
    </div>

    <button type="submit" class="btn-submit">Envoyer</button>

    {{ form_end(form) }}



</div>
<script>
document.addEventListener("DOMContentLoaded", function () {
    const flash = document.getElementById("flashMessage");

    if (flash) {
        setTimeout(() => {
            flash.style.animation = "slideFadeOut 0.6s forwards";

            // Supprime l'Ã©lÃ©ment du DOM aprÃ¨s l'animation
            setTimeout(() => {
                flash.remove();
            }, 600);
        }, 4000); // 4 secondes avant disparition
    }
});
</script>


{% endblock %}


