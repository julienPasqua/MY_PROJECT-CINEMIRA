</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const nbRangees = document.getElementById('nb_rangees');
    const nbPlaces = document.getElementById('nb_places');
    const previewTotal = document.getElementById('preview-total');
    const previewDetail = document.getElementById('preview-detail');

    function updatePreview() {
        const r = parseInt(nbRangees.value) || 0;
        const p = parseInt(nbPlaces.value) || 0;
        const total = r * p;
        
        previewTotal.textContent = total;
        previewDetail.textContent = r + ' rang√©es √ó ' + p + ' places';
    }

    nbRangees.addEventListener('input', updatePreview);
    nbPlaces.addEventListener('input', updatePreview);
    updatePreview();
});
</script>
{% endblock %}