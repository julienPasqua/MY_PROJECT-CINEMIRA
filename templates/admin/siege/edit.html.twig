{% extends 'base.html.twig' %}

{% block title %}Modifier un si√®ge{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    .content-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 15px;
    }
    .page-title {
        color: white;
        font-weight: 800;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 1rem;
    }
    .btn-back {
        background: #764ba2;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        transition: 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    .btn-back:hover {
        background: #667eea;
        color: white;
    }
    .btn-save {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        color: #000;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    .btn-save:hover {
        background: linear-gradient(135deg, #ffed4e, #ffd700);
        transform: scale(1.05);
        color: #000;
    }
    .form-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e9ecef;
    }
    .form-section-title {
        font-weight: 700;
        color: #764ba2;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .form-section-title .icon {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }
    @media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
    .form-group {
        margin-bottom: 1rem;
    }
    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        display: block;
    }
    .form-group input,
    .form-group select {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    .form-group input:focus,
    .form-group select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        outline: none;
    }
    .btn-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }
    .current-info {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-left: 4px solid #764ba2;
        padding: 1rem;
        border-radius: 0 8px 8px 0;
        margin-bottom: 1.5rem;
    }
    .current-info strong {
        color: #764ba2;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">

    <h1 class="page-title">‚úèÔ∏è Modifier le si√®ge</h1>

    <a href="{{ path('app_admin_siege_by_salle', {id: siege.salle.id}) }}" class="btn-back">‚¨Ö Retour</a>

    <div class="content-card">

        <div class="current-info">
            ü™ë Modification du si√®ge : <strong>{{ siege.numeroRangee }}{{ siege.numeroPlace }}</strong>
            (Salle {{ siege.salle.numeroSalle }})
        </div>

        {{ form_start(form) }}

        <div class="form-section">
            <div class="form-section-title">
                <span class="icon">üé¨</span>
                <span>Salle</span>
            </div>
            <div class="form-group">
                {{ form_label(form.salle) }}
                {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.salle) }}
            </div>
        </div>

        <div class="form-section">
            <div class="form-section-title">
                <span class="icon">ü™ë</span>
                <span>Informations du si√®ge</span>
            </div>
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.numero_rangee) }}
                    {{ form_widget(form.numero_rangee, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.numero_rangee) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.numero_place) }}
                    {{ form_widget(form.numero_place, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.numero_place) }}
                </div>
            </div>
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prix_supplement) }}
                    {{ form_widget(form.prix_supplement, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix_supplement) }}
                </div>
            </div>
        </div>

        <div class="btn-actions">
            <a href="{{ path('app_admin_siege_by_salle', {id: siege.salle.id}) }}" class="btn-back">‚Ü© Annuler</a>
            <button type="submit" class="btn-save">üíæ Enregistrer</button>
        </div>

        {{ form_end(form) }}
    </div>

</div>
{% endblock %}