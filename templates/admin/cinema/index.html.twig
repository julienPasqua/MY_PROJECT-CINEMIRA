{% extends 'base.html.twig' %}

{% block title %}Liste des cin√©mas{% endblock %}

{% block body %}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    .content-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 15px;
    }
    .btn-custom {
        background: #ffd700;
        color: #000;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 1rem;
    }
    .btn-custom:hover {
        background: #ffed4e;
        transform: scale(1.05);
    }
    .btn-back {
        background: #764ba2;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        transition: 0.3s ease;
        text-decoration: none;
    }
    .btn-back:hover {
        background: #667eea;
        color: white;
    }
    .table-custom thead {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
    .table-custom tbody tr:hover {
        background-color: #f8f9fa;
    }
     .btn-action {
        padding: 0.4rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        margin: 0 0.25rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
    }
    .btn-edit {
        background: #667eea;
        border: none;
        color: white;
    }
    .btn-edit:hover {
        background: #764ba2;
    }
    .btn-delete {
        background: #dc3545;
        border: none;
        color: white;
    }
    .btn-delete:hover {
        background: #c82333;
    }
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }
    .empty-state-icon {
        font-size: 4rem;
        opacity: 0.8;
        margin-bottom: 1rem;
    }
</style>

<div class="container py-5">

    <!-- Header -->
    <a href="{{ path('app_admin_dashboard') }}" class="btn-back mb-3">
        ‚Üê Retour au dashboard
    </a>

    <div class="content-card mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1" style="color: #764ba2;">üé¨ Liste des cin√©mas</h2>
                <p class="text-muted">Gestion des cin√©mas</p>
            </div>
            <a href="{{ path('app_admin_cinema_new') }}" class="btn-custom">
                ‚ûï Ajouter un cin√©ma
            </a>
        </div>
    </div>

    <!-- Messages Flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Tableau -->
    <div class="content-card">

        {% if cinemas is empty %}
            <div class="empty-state">
                <div class="empty-state-icon">üé•</div>
                <h4>Aucun cin√©ma enregistr√©</h4>
                <p>Ajoutez un cin√©ma pour commencer la gestion.</p>
                <a href="{{ path('app_admin_cinema_new') }}" class="btn-custom mt-3">
                    ‚ûï Ajouter un cin√©ma
                </a>
            </div>

        {% else %}

            <div class="table-responsive">
                <table class="table table-custom align-middle">
                    <thead>
                    <tr>
                        <th style="width: 8%;">ID</th>
                        <th style="width: 20%;">Nom</th>
                        <th style="width: 20%;">Ville</th>
                        <th style="width: 32%;">Adresse</th>
                        <th style="width: 20%;" class="text-center">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for cinema in cinemas %}
                        <tr>
                            <td><strong>{{ cinema.id }}</strong></td>

                            <td>{{ cinema.nom }}</td>

                            <td>{{ cinema.ville }}</td>

                            <td>
                                {% if cinema.adresse %}
                                    <small>{{ cinema.adresse }}</small>
                                {% else %}
                                    <small class="text-muted">Aucune adresse</small>
                                {% endif %}
                            </td>

                            <td class="text-center">

                                <a href="{{ path('app_admin_cinema_edit', {id: cinema.id}) }}"
                                   class="btn-action btn-edit" title="Modifier">
                                    ‚úèÔ∏è Modifier
                                </a>

                                <form method="post"
                                      action="{{ path('app_admin_cinema_delete', {id: cinema.id}) }}"
                                      style="display: inline-block;"
                                      onsubmit="return confirm('Supprimer ce cin√©ma ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cinema.id) }}">
                                    <button class="btn-action btn-delete">üóëÔ∏è</button>
                                </form>

                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>

        {% endif %}

    </div>
</div>

{% endblock %}
