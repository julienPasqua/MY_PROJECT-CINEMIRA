{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    .content-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 15px;
    }
    .btn-custom {
        background: #ffd700;
        color: #000;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 1rem;
    }
    .btn-custom:hover {
        background: #ffed4e;
        transform: scale(1.05);
    }
    .btn-back {
        background: #764ba2;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        transition: 0.3s ease;
        text-decoration: none;
    }
    .btn-back:hover {
        background: #667eea;
        color: white;
    }
    .table-custom thead {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
    .table-custom tbody tr:hover {
        background-color: #f8f9fa;
    }
    .badge-custom {
        background: #667eea;
        color: white;
        padding: 0.4em 0.9em;
        border-radius: 20px;
    }
      .btn-action {
        padding: 0.4rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        margin: 0 0.25rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
    }
    .btn-edit {
        background: #667eea;
        border: none;
        color: white;
    }
    .btn-edit:hover {
        background: #764ba2;
    }
    .btn-delete {
        background: #dc3545;
        border: none;
        color: white;
    }
    .btn-delete:hover {
        background: #c82333;
    }
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }
    .empty-state-icon {
        font-size: 4rem;
        opacity: 0.8;
        margin-bottom: 1rem;
    }
</style>

<div class="container py-5">

    <!-- Header -->
    <a href="{{ path('app_admin_dashboard') }}" class="btn-back mb-3">
        ‚Üê Retour au dashboard
    </a>

    <div class="content-card mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1" style="color: #764ba2;">üè¢ Liste des salles</h2>
                <p class="text-muted">Gestion des salles de cin√©ma</p>
            </div>
            <a href="{{ path('app_admin_salle_new') }}" class="btn-custom">
                ‚ûï Ajouter une salle
            </a>
        </div>
    </div>

    <!-- Messages Flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Tableau / Empty State -->
    <div class="content-card">

        {% if salles is empty %}
            <div class="empty-state">
                <div class="empty-state-icon">ü™ë</div>
                <h4>Aucune salle disponible</h4>
                <p>Ajoutez une salle pour commencer la gestion.</p>
                <a href="{{ path('app_admin_salle_new') }}" class="btn-custom mt-3">
                    ‚ûï Ajouter une salle
                </a>
            </div>

        {% else %}

            <div class="table-responsive">
                <table class="table table-custom align-middle">
                    <thead>
                    <tr>
                        <th style="width: 8%;">ID</th>
                        <th style="width: 12%;">Num√©ro</th>
                        <th style="width: 15%;">Nom</th>
                        <th style="width: 20%;">Cin√©ma</th>
                        {# <th style="width: 12%;">Capacit√©</th> #}
                        <th style="width: 23%;">√âquipements</th>
                        <th style="width: 10%;" class="text-center">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for salle in salles %}
                        <tr>
                            <td><strong>{{ salle.id }}</strong></td>

                            <td>
                                <span class="badge-custom">Salle {{ salle.numeroSalle }}</span>
                            </td>

                            <td>
                                {% if salle.nom %}
                                    {{ salle.nom }}
                                {% else %}
                                    <span class="text-muted">Sans nom</span>
                                {% endif %}
                            </td>

                            <td>
                                <strong>{{ salle.cinema.nom }}</strong><br>
                                <small class="text-muted">{{ salle.cinema.ville }}</small>
                            </td>

                            {# <td>
                                <span class="text-muted">üë•</span> {{ salle.capacite }} places
                            </td> #}

                            <td>
                                {% if salle.equipement %}
                                    <small class="text-muted">
                                        {{ salle.equipement|slice(0, 50) }}{% if salle.equipement|length > 50 %}...{% endif %}
                                    </small>
                                {% else %}
                                    <small class="text-muted">Aucun √©quipement</small>
                                {% endif %}
                            </td>

                            <td class="text-center">
                                <a href="{{ path('app_admin_salle_edit', {id: salle.id}) }}" 
                                   class="btn-action btn-edit" title="Modifier">
                                    ‚úèÔ∏è Modifier
                                </a>

                                <form method="post" 
                                      action="{{ path('app_admin_salle_delete', {id: salle.id}) }}" 
                                      style="display: inline-block;"
                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette salle ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
                                    <button type="submit" class="btn-action btn-delete" title="Supprimer">
                                        üóëÔ∏è
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Statistiques -->
            <div class="mt-4 p-3" style="background: #f8f9fa; border-radius: 8px;">
                <div class="row text-center">
                    <div class="col-md-4">
                        <strong style="color: #764ba2;">{{ salles|length }}</strong>
                        <p class="text-muted mb-0 small">Salles totales</p>
                    </div>
                    <div class="col-md-4">
                        {% set totalCapacity = 0 %}
                        {% for item in salles %}
                            {#}{% set totalCapacity = totalCapacity + item.capacite %}{#}
                        {% endfor %}
                        <strong style="color: #764ba2;">{{ totalCapacity }}</strong>
                        <p class="text-muted mb-0 small">Places totales</p>
                    </div>
                    <div class="col-md-4">
                        <strong style="color: #764ba2;">
                            {% if salles|length > 0 %}
                                {{ (totalCapacity / salles|length)|round }}
                            {% else %}
                                0
                            {% endif %}
                        </strong>
                        <p class="text-muted mb-0 small">Capacit√© moyenne</p>
                    </div>
                </div>
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}