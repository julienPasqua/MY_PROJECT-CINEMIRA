{% extends 'base.html.twig' %}

{% block title %}Films √† l'affiche{% endblock %}

{% block stylesheets %}
<style>
    .films-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0;
        margin-bottom: 40px;
        border-radius: 15px;
    }

    .films-header h1 {
        font-size: 3em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .films-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        padding: 20px 0;
    }

    .film-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }

    .film-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.2);
    }

    .film-card-image {
        width: 100%;
        height: 375px;
        object-fit: cover;
        display: block;
    }

    .film-card-content {
        padding: 20px;
    }

    .film-card-title {
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
        min-height: 2.4em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .film-card-rating {
        display: flex;
        align-items: center;
        gap: 5px;
        color: #ffd700;
        font-weight: bold;
        font-size: 1.1em;
        margin-bottom: 10px;
    }

    .film-card-overview {
        color: #666;
        font-size: 0.9em;
        line-height: 1.4;
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .btn-voir-seances {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #ffc107, #ff9800);
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        font-size: 1em;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-voir-seances:hover {
        background: linear-gradient(135deg, #ff9800, #f57c00);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255,193,7,0.4);
        color: white;
        text-decoration: none;
    }

    .film-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: bold;
    }

    .loading-spinner {
        text-align: center;
        padding: 60px;
    }

    .no-results {
        text-align: center;
        padding: 60px;
        color: #999;
    }

    @media (max-width: 768px) {
        .films-grid {
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
        }

        .films-header h1 {
            font-size: 2em;
        }
    }
</style>
{% endblock %}

{% block body %}
    {# En-t√™te #}
    <div class="films-header">
        <div class="container text-center">
            <h1>üé¨ Films √† l'affiche</h1>
            <p class="lead">D√©couvrez les films les plus populaires du moment</p>
        </div>
    </div>

    {# Grille de films #}
    <div class="container">
        {% if movies is defined and movies is not empty %}
            <div class="films-grid">
                {% for movie in movies %}
                    <div class="film-card">
                        {# Badge de popularit√© #}
                        {% if movie.vote_average >= 8 %}
                            <span class="film-badge">‚≠ê Top Film</span>
                        {% endif %}

                        {# Image du film #}
                        <img src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" 
                             alt="{{ movie.title }}"
                             class="film-card-image"
                             loading="lazy">

                        {# Contenu de la carte #}
                        <div class="film-card-content">
                            <h3 class="film-card-title">{{ movie.title }}</h3>

                            {# Note #}
                            <div class="film-card-rating">
                                ‚≠ê <span>{{ movie.vote_average|number_format(1) }}</span>/10
                            </div>

                            {# R√©sum√© court #}
                            {% if movie.overview %}
                                <p class="film-card-overview">
                                    {{ movie.overview|length > 120 ? movie.overview|slice(0, 120) ~ '...' : movie.overview }}
                                </p>
                            {% endif %}

                            {# Bouton "Voir les s√©ances" #}
                            <a href="{{ path('app_film_show_tmdb', {tmdbId: movie.id}) }}" 
                               class="btn-voir-seances">
                                <span>üéüÔ∏è</span>
                                <span>Voir les s√©ances</span>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-results">
                <h3>üòî Aucun film disponible</h3>
                <p>Revenez plus tard pour d√©couvrir de nouveaux films !</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
<script>
    // Animation au scroll
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.film-card');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, {
            threshold: 0.1
        });

        cards.forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            observer.observe(card);
        });
    });
</script>
{% endblock %}