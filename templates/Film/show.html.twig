{% extends 'base.html.twig' %}

{% block title %} - CineMira{% endblock %}

{% block body %}

<div class="container mt-4">

    {# ==========================
       HEADER AVEC BACKDROP + POSTER
       ========================== #}
    <div class="position-relative mb-5">
        <div class="rounded shadow" 
             style="
                background-image: url('https://image.tmdb.org/t/p/original{{ film.backdropUrl }}');
                background-size: cover;
                background-position: center;
                height: 380px;
             ">
        </div>

        <div class="position-absolute" style="bottom: -60px; left: 40px;">
            <img src="https://image.tmdb.org/t/p/w300{{ film.posterUrl }}" 
                 alt="{{ film.titre }}" 
                 class="rounded shadow-lg"
                 style="width: 180px;">
        </div>
    </div>

    <div class="mt-5">

        {# ==========================
           TITRE + ANN√âE + BOUTON
           ========================== #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            
            <div>
                {# <h1 class="fw-bold">{{ film.titre }}</h1> #}

                {% if film.dateSortie %}
                    <span class="badge bg-dark">
                        üìÖ {{ film.dateSortie|date('Y') }}
                    </span>
                {% endif %}
            </div>

            {# ‚≠ê Bouton vers choix cin√©ma #}
            <a href="{{ path('app_reservation_cinema', { tmdbId: tmdbId }) }}" 
               class="btn btn-danger btn-lg px-4 py-2"
               style="border-radius: 12px; font-weight: 600;">
               üéüÔ∏è Voir les s√©ances / Choisir mon cin√©ma
            </a>
        </div>

        <hr>

        {# ==========================
           SYNOPSIS + INFORMATIONS
           ========================== #}
        <div class="row mt-4">
            
            <div class="col-md-8">
                <h3 class="mb-3">üìñ Synopsis</h3>
                <p style="font-size: 1.1rem;">
                    {{ film.synopsis ?: 'Aucun synopsis disponible.' }}
                </p>
            </div>

            <div class="col-md-4">
                <h3 class="mb-3">‚ÑπÔ∏è Informations</h3>
                <ul class="list-unstyled fs-6">

                    <li><strong>Ajout√© le :</strong> {{ film.dateSortie|date('Y') }}</li>
                    <li><strong>TMDB ID :</strong> {{ film.tmdbId }}</li>

                    {% if film.genres|length > 0 %}
                        <li>
                            <strong>Genres :</strong> 
                            {{ film.genres|map(g => g.nom)|join(', ') }}
                        </li>
                    {% endif %}
                </ul>
            </div>

        </div>

        <hr>

        {# ==========================
           AVIS DES UTILISATEURS
           ========================== #}
        <h3 class="mt-5 mb-3">‚≠ê Avis des spectateurs</h3>

        {% if avis is empty %}
            <p>Aucun avis pour le moment.</p>
        {% else %}
            <div class="list-group mb-4">
                {% for a in avis %}
                    <div class="list-group-item">
                        <strong>{{ a.utilisateur.email }}</strong>
                        <span class="badge bg-warning text-dark ms-2">
                            {{ a.note }}/5
                        </span>
                        <p class="mt-2">{{ a.commentaire }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}
