{% extends 'base.html.twig' %}

{% block title %}{{ film.titre }} - CineMira{% endblock %}

{% block body %}

<div class="container mt-4">

    {# ==========================
       HEADER BACKDROP
       ========================== #}

    {% set backdrop = film.backdropUrl ? 'https://image.tmdb.org/t/p/original' ~ film.backdropUrl : asset('images/no-backdrop.jpg') %}
    {% set poster   = film.posterUrl   ? 'https://image.tmdb.org/t/p/w300'    ~ film.posterUrl   : asset('images/no-poster.png') %}

    <div class="position-relative mb-5">
        <div class="rounded shadow"
            style="
                background-image: url('{{ backdrop }}');
                background-size: cover;
                background-position: center;
                height: 380px;
            ">
        </div>

        <div class="position-absolute" style="bottom: -60px; left: 40px;">
            <img src="{{ poster }}"
                 alt="{{ film.titre }}"
                 class="rounded shadow-lg"
                 style="width: 180px;">
        </div>
    </div>

    <div class="mt-5">

        {# ==========================
           TITRE ET ACTION
           ========================== #}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="fw-bold">{{ film.titre }}</h1>

                {% if film.dateSortie %}
                    <span class="badge bg-dark">
                        üìÖ {{ film.dateSortie|date('Y') }}
                    </span>
                {% endif %}
            </div>

            <a href="{{ path('app_reservation_cinema', { tmdbId: film.tmdbId }) }}"
               class="btn btn-danger btn-lg px-4 py-2"
               style="border-radius: 12px; font-weight: 600;">
               üéüÔ∏è Voir les s√©ances / Choisir mon cin√©ma
            </a>
        </div>

        <hr>

        {# ==========================
           SYNOPSIS
           ========================== #}

        <div class="row mt-4">
            <div class="col-md-8">
                <h3 class="mb-3">üìñ Synopsis</h3>
                <p style="font-size: 1.1rem;">
                    {{ film.synopsis ?: 'Aucun synopsis disponible.' }}
                </p>
            </div>

            <div class="col-md-4">
                <h3 class="mb-3">‚ÑπÔ∏è Informations</h3>
                <ul class="list-unstyled fs-6">

                    <li><strong>Ann√©e :</strong>
                        {{ film.dateSortie ? film.dateSortie|date('Y') : '‚Äî' }}
                    </li>

                    <li><strong>TMDB ID :</strong> {{ film.tmdbId }}</li>

                    {% if film.genres is defined and film.genres|length > 0 %}
                        <li>
                            <strong>Genres :</strong>
                            {{ film.genres|map(g => g.nom ?? g.name)|join(', ') }}
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <hr>

        {# ==========================
           AVIS UTILISATEURS
           ========================== #}

        <h3 class="mt-5 mb-3">‚≠ê Avis des spectateurs</h3>

        {% if avis is not defined or avis is empty %}
            <p>Aucun avis pour le moment.</p>
        {% else %}
            <div class="list-group mb-4">
                {% for a in avis %}
                    <div class="list-group-item">
                        <strong>{{ a.utilisateur.email }}</strong>
                        <span class="badge bg-warning text-dark ms-2">
                            {{ a.note }}/5
                        </span>
                        <p class="mt-2">{{ a.commentaire }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}
